        wes_combo {
            bindings = <&wes_macro>;
            key-positions = <11 12>;
            require-prior-idle-ms = <250>;
        };
        cdr_combo {
            bindings = <&cdr_macro>;
            key-positions = <32 33>;
            require-prior-idle-ms = <250>;
        };
        ext_combo {
            bindings = <&ext_power EP_TOG>;
            key-positions = <2 9>;
            require-prior-idle-ms = <250>;
        };
        mmb_combo {
            bindings = <&mkp MB3>;
            key-positions = <35 36>;
            require-prior-idle-ms = <250>;
